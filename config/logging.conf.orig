# Configuration file format is described in the python documentation:
# https://docs.python.org/3/library/logging.config.html#configuration-file-format
#
# The root logger is currently configured to write info logs to stdout and debug logs
# to a local file named "wrowfusion.log"
[loggers]
keys=root, src.wrowfusion, src.ble_client, src.ble_server, src.ble_standard_services, src.bleif, src.heart_rate, src.s4, src.s4if, bleak

[handlers]
keys=consoleHandler,rotatingFileHandler

[formatters]
keys=simpleFormatter

[logger_root]
level=DEBUG
handlers=consoleHandler,rotatingFileHandler

[logger_src.wrowfusion]
level=DEBUG
handlers=consoleHandler, rotatingFileHandler
qualname=src.wrowfusion
propagate=0

[logger_src.ble_client]
level=INFO
handlers=consoleHandler, rotatingFileHandler
qualname=src.ble_client
propagate=0

[logger_src.ble_server]
level=DEBUG
handlers=consoleHandler, rotatingFileHandler
qualname=src.ble_server
propagate=0

[logger_src.ble_standard_services]
level=INFO
handlers=consoleHandler, rotatingFileHandler
qualname=src.ble_standard_services
propagate=0

[logger_src.bleif]
level=INFO
handlers=consoleHandler, rotatingFileHandler
qualname=src.bleif
propagate=0

[logger_src.heart_rate]
level=INFO
handlers=consoleHandler, rotatingFileHandler
qualname=src.heart_rate
propagate=0

[logger_src.s4]
level=INFO
handlers=consoleHandler, rotatingFileHandler
qualname=src.s4
propagate=0

[logger_src.s4if]
level=INFO
handlers=consoleHandler, rotatingFileHandler
qualname=src.s4if
propagate=0

[logger_bleak]
level=WARNING
handlers=consoleHandler, rotatingFileHandler
qualname=bleak
propagate=0

[handler_consoleHandler]
class=StreamHandler
level=DEBUG
formatter=simpleFormatter
args=(sys.stdout,)

[handler_rotatingFileHandler]
class=handlers.RotatingFileHandler
level=DEBUG
formatter=simpleFormatter
# args = (filename, mode, maxBytes, backupCount)
args=("#REPO_DIR#/logs/wrowfusion.log", 'a', 1*1024*1024, 9)

[formatter_simpleFormatter]
format=%(asctime)s [%(levelname)s] %(name)s: %(message)s
datefmt=%Y-%m-%d %H:%M:%S