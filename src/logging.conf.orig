# Configuration file format is described in the python documentation:
# https://docs.python.org/3/library/logging.config.html#configuration-file-format
#
# The root logger is currently configured to write info logs to stdout and debug logs
# to a local file named "wrowfusion.log"
[loggers]
keys=root, src.wrowfusion, src.ble_client, src.ble_server, src.heart_rate, src.s4, bleak

[handlers]
keys=consoleHandler,fileHandler

[formatters]
keys=simpleFormatter

[logger_root]
level=DEBUG
handlers=consoleHandler,fileHandler

[logger_src.wrowfusion]
level=DEBUG
handlers=consoleHandler, fileHandler
qualname=src.wrowfusion
propagate=0

[logger_src.ble_client]
level=DEBUG
handlers=consoleHandler, fileHandler
qualname=src.ble_client
propagate=0

[logger_src.ble_server]
level=DEBUG
handlers=consoleHandler, fileHandler
qualname=src.ble_server
propagate=0

[logger_src.heart_rate]
level=INFO
handlers=consoleHandler, fileHandler
qualname=src.heart_rate
propagate=0

[logger_src.s4]
level=DEBUG
handlers=consoleHandler, fileHandler
qualname=src.s4
propagate=0

[logger_bleak]
level=WARNING
handlers=consoleHandler, fileHandler
qualname=bleak
propagate=0

[handler_consoleHandler]
class=StreamHandler
level=DEBUG
formatter=simpleFormatter
args=(sys.stdout,)

[handler_fileHandler]
class=FileHandler
level=DEBUG
formatter=simpleFormatter
args=("#REPO_DIR#/src/wrowfusion.log", 'a')

[formatter_simpleFormatter]
format=%(asctime)s [%(levelname)s] %(name)s: %(message)s
datefmt=%Y-%m-%d %H:%M:%S